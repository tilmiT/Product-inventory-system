{
  "name": "windmill-dashboard",
  "version": "1.0.2",
  
  "description": "A multi theme, completely accessible, with components and pages examples, ready for production dashboard.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "cz": "git-cz",
    "release": "release-it"
  },
  "author": "Estevan Maito <ejmaito@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "1.1.4",
    "@tailwindcss/custom-forms": "0.2.1",
    "autoprefixer": "^9.8.0",
    "color": "^3.2.1",
    "commitizen": "4.1.2",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.2.0",
    "laravel-vite-plugin": "^1.3.0",
    "postcss-cli": "7.1.1",
    "release-it": "13.6.4",
    "tailwindcss": "^1.4.6",
    "tailwindcss-multi-theme": "1.0.3",
    "vite": "^6.3.5"
  },
  "keywords": [
    "tailwind",
    "windmill",
    "dashboard",
    "template",
    "admin"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "alpinejs": "^3.14.9",
    "axios": "^1.9.0",
    "postcss": "^8.5.4"
  }
}